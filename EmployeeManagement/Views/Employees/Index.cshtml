@model IEnumerable<EmployeeManagementSystem.Models.Employee>

@{
    ViewBag.Title = "Employee Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="text-center mb-4">Employee List</h2>

    <div class="d-flex justify-content-end mb-3">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">@Html.DisplayNameFor(m => m.First().Shift.ShiftName)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.First().FullName)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.First().Designation)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.First().DateOfJoining)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.First().Salary)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.First().ContactNumber)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.First().Email)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.First().Address)</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Shift?.ShiftName</td>
                        <td>@item.FullName</td>
                        <td>@item.Designation</td>
                        <td>@item.DateOfJoining.ToString("yyyy-MM-dd")</td>
                        <td>@item.Salary.ToString("C")</td>
                        <td>@item.ContactNumber</td>
                        <td>@item.Email</td>
                        <td>@item.Address</td>
                        <td>
                            <div class="btn-group" role="group">
                                @Html.ActionLink("Details",
                                                 "Details",
                                                 new { id = item.EmployeeId },
                                                 new { @class = "btn btn-info btn-sm" })
                                @Html.ActionLink("Edit",
                                                 "Edit",
                                                 new { id = item.EmployeeId },
                                                 new { @class = "btn btn-warning btn-sm" })
                                @Html.ActionLink("Delete",
                                                 "Delete",
                                                 new { id = item.EmployeeId },
                                                 new { @class = "btn btn-danger btn-sm" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No employees found. @Html.ActionLink("Create one now", "Create")
        </div>
    }
</div>
