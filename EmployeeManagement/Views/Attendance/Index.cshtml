@model IEnumerable<EmployeeManagementSystem.Models.Attendance>

@{
    ViewBag.Title = "Attendance Records";
}

<h2 class="text-center my-4">@ViewBag.Title</h2>

<div class="container">
    <p>
        @Html.ActionLink("Log New Attendance", "Create", "Attendance", null, new { @class = "btn btn-primary" })
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Employee</th>
                    <th>Date</th>
                    <th>Check-In</th>
                    <th>Check-Out</th>
                    <th>Type</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@a.Employee.FullName</td>
                        <td>@a.Date.ToShortDateString()</td>
                        <td>@a.CheckIn.ToString(@"hh\:mm")</td>
                        <td>@a.CheckOut.ToString(@"hh\:mm")</td>
                        <td>@a.AttendanceType</td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = a.AttendanceId }, new { @class = "btn btn-info btn-sm" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = a.AttendanceId }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <style>
        .table thead th {
            background-color: #007bff;
            color: white;
        }

        .btn-sm {
            margin: 0 5px;
        }
    </style>
}
