@model EmployeeManagementSystem.Models.Attendance

@{
    ViewBag.Title = "Edit Attendance";
}

<h2 class="text-center my-4">@ViewBag.Title</h2>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })
        @Html.HiddenFor(model => model.AttendanceId)

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Attendance Information</h5>
            </div>
            <div class="card-body">
                <!-- Employee Dropdown -->
                <div class="form-group row">
                    @Html.LabelFor(model => model.EmployeeId, "Employee", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.DropDownList("EmployeeId", null, "-- Select Employee --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EmployeeId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Date -->
                <div class="form-group row">
                    @Html.LabelFor(model => model.Date, "Date", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Check-In -->
                <div class="form-group row">
                    @Html.LabelFor(model => model.CheckIn, "Check-In Time", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CheckIn, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                        @Html.ValidationMessageFor(model => model.CheckIn, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Check-Out -->
                <div class="form-group row">
                    @Html.LabelFor(model => model.CheckOut, "Check-Out Time", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CheckOut, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                        @Html.ValidationMessageFor(model => model.CheckOut, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Attendance Type -->
                <div class="form-group row">
                    @Html.LabelFor(model => model.AttendanceType, "Attendance Type", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AttendanceType, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AttendanceType, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Save Button -->
                <div class="form-group row mt-3">
                    <div class="col-md-10 offset-md-2">
                        <button type="submit" class="btn btn-success">Save Attendance</button>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="mt-3">
        @Html.ActionLink("Back to List", "Index", "Attendance", new { @class = "btn btn-secondary" })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
